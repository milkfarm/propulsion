!!!
%html
  %head
    %meta{charset: "utf-8"}
    %meta{content: "IE=edge,chrome=1", http: {equiv: "X-UA-Compatible"}}
    %meta{name: "viewport", content: "width=device-width, initial-scale=1"}
    %title= page_title(current_page.data.title)

    <!-- Fonts -->
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Roboto:100,400,300,700'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Roboto+Slab:100,400,300,700'
    = stylesheet_link_tag 'http://fonts.googleapis.com/css?family=Roboto+Condensed:400,700,300'

    <!-- Styles -->
    = stylesheet_link_tag 'application'

    <!-- HTML5 fallbacks -->
    <!--[if lt IE 9]>
    = javascript_include_tag 'html5shiv', 'respond.min'
    <![endif]-->

    = partial 'partials/analytics' unless current_page.data.hide_analytics

  - splash = ( yield_content :splash )

  %body{class: "#{page_classes} dark #{splash.present? ? 'bottom-nav' : 'top-nav'}"}
    .container-fluid
      = partial 'partials/header'
      - if splash.present?
        = splash

      = yield

      = partial 'partials/footer'

    = javascript_include_tag 'https://code.jquery.com/jquery-2.1.1.min.js', 'application'
